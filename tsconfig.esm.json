{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "lib/esm/"
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.*"
  ]
}
